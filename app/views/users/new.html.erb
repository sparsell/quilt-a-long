<% provide(:title, "Sign Up") %>

<h1>Sign up</h1>

<div>
<%= form_for :user do |f| %>

<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :email %>
<%= f.text_field :email %><br>

<%= f.label :password %>
<%= f.password_field :password_digest %><br>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %><br>
<%= f.submit "Submit" %>
<% end %>
</div>