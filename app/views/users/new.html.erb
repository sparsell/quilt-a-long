<% provide(:title, "Sign Up") %>
<% provide(:button_text, 'Create my Account') %>

<h1>Sign up</h1>

<div class="row">
    <div class="md-6 col-md-offset-3">
        <%# <%= render 'form' %> 
        <%= form_for(@user) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %><br>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %><br>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %><br>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %><br>

        <%= f.label :company_name %>
        <%= f.text_field :company_name, class: 'form-control' %><br>

        <%= f.label :quilting_style %>
        <%= f.text_field :quilting_style, class: 'form-control' %><br>

        <%= f.submit %> 

        <% end %>
    </div>
</div>