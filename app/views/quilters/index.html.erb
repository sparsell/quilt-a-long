<h1> Quilters </h1>

    <section class="btn btn-sm">
        <%= link_to "Add New", new_quilter_path %>
    </section>

    <table class="table">

        <thead>
            <tr>
              <th> Name </th>
              <th> Quilt-A-Long </th>
              <th> Quilt Name </th>
               <th> Finished? </th>
               <th> Actions </th>
              <tr> </tr>
        </thead>

        <tbody>
            <% @quilters.each do |q| %>
            <tr>
                <td><%= q.quilter_name %></td>
                <td> <%= q.qal_id %></td>
                <td>
                    <p>Finished quilts:</p>
                    <% q.quilts.each do |quilt| %>
                    <%= quilt.quilt_name %>
                     <% end %>
                </td>
                <td> 
                    <section class="btn btn-sm">
                        <%= link_to "Edit", edit_quilter_path(q) %>
                    </section>
                    <section class="btn btn-sm">
                        <%= link_to "Delete", quilter_path(q), method: :delete, data: { confirm: "Are you sure?" }  %>
                    </section>
                </td>
            </tr>
              <% end %>
        </tbody>
    </table>

