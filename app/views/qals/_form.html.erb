

<%= form_for(@qal) do |f| %>

<%= f.label :qal_name %>
<%= f.text_field :qal_name %>
<br>

<%= f.label :start_date %>
<%= f.date_field :start_date %>

<br>
<%= f.label :end_date %>
<%= f.date_field :end_date %>
<br>
<%= f.label "Skill Level" %>
<%= f.select :skill_level, options_for_select([["Beginner", 'Beginner'], ["Intermediate", 'Intermediate'], ["Advanced", 'Advanced'], ["Challenging", 'Challenging']]) %>
<br>
<%= f.label "Quilt Style" %>
<%= f.select :quilting_style, options_for_select([['Modern', 'Modern'], ['Traditional', 'Traditional']]) %>
<br>
<br>
<br>
<br>
<%= f.label "Add Quilters" %><br>
<%= f.fields_for :quilters do |build_quilter|%>
        <%= build_quilter.label :quilter_name %>
        <%= build_quilter.collection_check_boxes :quilter_ids, Quilter.all, :id, :quilter_name do |q| %>
        <%= q.check_box %>
        <%= q.label %>
        <% end %>
    <% end%>

    <%= link_to "Add New Quilter", new_quilter_path %>
<br>
<br>

<br>
<%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end%>