<h1> Quilt-A-Longs </h1>

<div class="btn btn-sm">
<%= link_to "Add New", new_qal_path %>
</div>
<div class="btn btn-sm">
<%= link_to "My Profile", current_user %>
</div>

    <table class="table">
        <thead>
            <tr>
              <th> Name </th>
              <th> Start Date </th>
              <th> End Date </th>
              <tr> </tr>
        </thead>
        <tbody>
            <% @qals.each do |q| %>
            <tr>
                <td><%= link_to q.qal_name, qal_path(q) %></td>
                <td> <%= q.start_date %></td>
                <td><%= q.end_date %></td> 
                <% if current_user.id == q.user_id %> 
                <td> 
                    <p class="btn btn-sm">
                        <%= link_to "Edit", edit_qal_path(q)%>
                    </p>

                    <p class="btn btn-sm">
                  <%= link_to "Delete", qal_path(q), method: :delete, data: { confirm: "Are you sure?" }  %> 
                    </p>
                    
                    
                </td>
                    <% end %>
                
            </tr>
              <% end %>
        </tbody>
    </table>
   
