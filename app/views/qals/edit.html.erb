<% provide(:title, "Edit Quilt-A-Long") %>
<% provide(:button_text, 'Edit Quilt-A-Long') %>

<h1> Edit your Quilt-A-Long </h1>

<%# <div class="row">
    <div class="md-6 col-md-offset-3">
    <%= render 'form' %>
    <%# </div> %> 
    
</div>

<%= form_for(@qal) do |f| %>

<div>
    <%= f.label :qal_name %>
    <%= f.text_field :qal_name %>
<div>

<div>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
</div>

<div>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
</div>

<div>
    <%= f.label "Skill Level" %>
    <%= f.select :skill_level, options_for_select([["Beginner", 'Beginner'], ["Intermediate", 'Intermediate'], ["Advanced", 'Advanced'], ["Challenging", 'Challenging']]) %>
</div>

<div>
    <%= f.label "Quilt Style" %>
    <%= f.select :quilting_style, options_for_select([['Modern', 'Modern'], ['Traditional', 'Traditional']]) %>
</div>

<%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>